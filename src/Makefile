# Makefile generated by makemake, written by Eskil Steenberg Hald www.quelsolaar.com
# Compiler and compiler flags
CC = gcc
CFLAGS = -Wall -g -Wno-unknown-pragmas -std=c89

# Libraries
LIBS = -lm

# Source files
SRCS = runtime.c ctest.c

# target executable name
TARGET := hobbit

# Default target
all: $(TARGET)

# Linking the object files to create the executable
$(TARGET): $(SRCS:.c=.o)
	$(CC) $(CFLAGS) -o $@ $^ $(LIBS)

# Compiling individual source files into object files
%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: asm scheme clean

%.S: %.c
	$(CC) --omit-frame-pointer -S -o $@ $<

asm: $(SRCS:.c=.S)

scheme: runtime.c
	chez --script testit.scm

# Clean up the object files and executable
clean:
	rm -f $(SRCS:.c=.o) $(TARGET)
	rm -f $(SRCS:.c=.S) $(TARGET)
